# SniperSight environment template
# Copy to .env and adjust values.

# Frontend port (Vite dev server)
FRONTEND_PORT=5000

# Backend port (FastAPI / uvicorn)
BACKEND_PORT=8000

# Optional override for backend URL used by frontend proxy (docker-compose service name or remote)
BACKEND_URL=http://localhost:8000

# Default exchange adapter
EXCHANGE_ADAPTER=PHEMEX

# Auto sync loop interval (seconds) for scripts/auto_sync.sh
AUTO_SYNC_INTERVAL=15

# Log level for backend (info|debug|warning)
LOG_LEVEL=info

# Placeholder API keys (do not commit real keys)
API_KEY=changeme
API_SECRET=changeme

